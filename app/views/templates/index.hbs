<!DOCTYPE html>
<html lang="en" >
<head>
  {{>meta}}
    
    <title>Главная</title>
</head>
<body class="" >
  {{>nav}}
    <div class="container bg-primary-subtle">  
        <ol id="list" class="list-group list-group-numbered mb-3">
          
       
          </ol>
         
              
              
                  </div>
{{>footer}}
                   <script type="text/javascript">
                     $(window).on('load', function() {
                         fetch('/api/users').then(response => response.json()).then(res=>{
                          for( let r of res){
                            let li = `<li class="list-group-item d-flex justify-content-between align-items-start ">
                                  <a class="text-black text-decoration-none" href="/article/{{file.id}}">
                                <div class="ms-2 me-auto text-dark">
                                  
                                  <div class="fw-bold" style="color: var(--indigo)">{{file.name}}</div>
                                  <span >${r.first_name} ${r.last_name}</span>
                                </div> </a>
                                <span class="badge bg-primary text-white rounded-pill" style="background-color: #6f42c1;" >Записаться</span>
                              </li>`
                              $('#list').append(li)
                          }
                          
                          
                          })
                     });
                 </script>
                 
             </body>
             </html>